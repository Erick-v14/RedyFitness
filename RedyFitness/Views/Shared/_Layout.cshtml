<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <p style="padding-right: 15px;"></p>
            <a class="navbar-brand" href="~/Home/Index" style="padding-right: 30px">Redy Fitness</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-item" href="~/Home/History">History <img src="~/Content/Icons/history.png" width="20" height="20" /></a>
                        &ensp;&ensp;
                    </li>
                    <li class="nav-item active">
                        <a href="~/Home/Workout">Workout <img src="~/Content/Icons/dumbbell.png" width="20" height="20" /> </a> 
                        &ensp;&ensp;
                    </li>
                    <li class="nav-item active">
                        <a class="nav-item" href="~/Home/myProfile">My Profile<img src="~/Content/Icons/userpro2.png" width="20" height="20" />   </a>
                                           
                    </li>
                </ul>
            </div>
            <a class="my-2">
                <a href="~/Users/Login">Login <img src="~/Content/Icons/enter (2).png" width="20" height="20" /></a> &nbsp;               
            </a>
    </nav>

        

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Redy Fitness inc.</p>
                @Html.ActionLink("Contact", "Contact", "Home")
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>