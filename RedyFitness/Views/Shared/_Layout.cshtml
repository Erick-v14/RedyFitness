<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <div class="navbar-header">
                @Html.ActionLink("Redy Fitness", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @* <li>@Html.ActionLink("Home", "Index", "Home")</li> *@
          
          
                @Html.ActionLink("History", "History", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Workout", "Workout", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("My Profile", "myProfile", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
            <a class="my-2">
                @helper LogIn()
                {
                    @GlyphIcon.ByName("log-in")
                }
                @Html.ActionLink("Login", "Login", "Users", new { area = "" }, new { @class = "navbar-brand" })
            </a>


            </div>
        </div>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Redy Fitness inc.</p>
            @Html.ActionLink("Contact", "Contact", "Home")
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>