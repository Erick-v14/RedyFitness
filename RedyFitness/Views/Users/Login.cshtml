@model RedyFitness.Models.LoginModel

@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm())
{
    <center>
        @Html.AntiForgeryToken()

        <img src="~/Content/RedyFitnessLogoHomePage.jpg" width="500" height="300" />
        <h3>  @Html.Label("", (string)ViewBag.msg, new { @class = "text-danger" }) </h3>

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <h3>Email</h3>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
        </div>



        <div class="form-group">
            <h3>Password</h3>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
        </div>



        <div class="text-center">
            <input type="submit" value="Login" class="btn btn-primary" />
            <input class="btn-sm btn-primary" type="submit" value="Forgot account" /><br />
            @Html.ActionLink("Create New Account", "CreateUser")
        <h3>  @Html.Label("", (string)ViewBag.message, new { @class = "text-success" }) </h3>
        </div>

    </center>
}

